#macro(writeField $name $type)
#if($type == "IDENTIFIER")
	if($name == null) {
		buf[offset++] = (byte)0x80;
	} else {
		buf[offset++] = (byte)0x81;
		offset = ${name}.writeTo(buf, offset);
	}
#elseif($type == "s")
	byte[] utf8 = ${name}.getBytes("UTF-8");
	int length = utf8.length;
	int i = 0;
	while ((length & 0xFFFFFF80) != 0L) {
		buf[offset + 9 - i++] =  ((byte) ((length & 0x7F) | 0x80));
		length >>>= 7;
	}
	buf[offset] = ((byte)(length & 0x7F));
	offset += i + 1;
	System.arraycopy(utf8, 0, buf, offset, utf8.length);
	offset += utf8.length;
#elseif($type == "b")
	buf[offset++] = (byte)($name ? 1 : 0);
#elseif($type == "i8" || $type == "u8")
	buf[offset++] = ${name};
#elseif($type == "i16" || $type == "u16")
	buf[offset++] = (byte) ${name};
	buf[offset++] = (byte) (${name} >> 8);
#elseif($type == "i32" || $type == "u32")
	buf[offset++] = (byte) ${name};
	buf[offset++] = (byte) (${name} >> 8);
	buf[offset++] = (byte) (${name} >> 16);
	buf[offset++] = (byte) (${name} >> 24);
#elseif($type == "i64" || $type == "u64")
	buf[offset++] = (byte) ${name};
	buf[offset++] = (byte) (${name} >> 8);
	buf[offset++] = (byte) (${name} >> 16);
	buf[offset++] = (byte) (${name} >> 24);
	buf[offset++] = (byte) (${name} >> 32);
	buf[offset++] = (byte) (${name} >> 40);
	buf[offset++] = (byte) (${name} >> 48);
	buf[offset++] = (byte) (${name} >> 56);
#elseif($type == "f32")
	int value = Float.floatToRawIntBits(${name});
	buf[offset++] = (byte) value;
	buf[offset++] = (byte) (value >> 8);
	buf[offset++] = (byte) (value >> 16);
	buf[offset++] = (byte) (value >> 24);
#elseif($type == "f64")
	long value = Double.doubleToRawLongBits(${name});
	buf[offset++] = (byte) value;
	buf[offset++] = (byte) (value >> 8);
	buf[offset++] = (byte) (value >> 16);
	buf[offset++] = (byte) (value >> 24);
	buf[offset++] = (byte) (value >> 32);
	buf[offset++] = (byte) (value >> 40);
	buf[offset++] = (byte) (value >> 48);
	buf[offset++] = (byte) (value >> 56);
#end
#end
#macro(readField $name $type $typeName)
#if($type == "IDENTIFIER")
	if(buf[offset++] == (byte)0x81) {
		if($name == null) {
			$name = new ${typeName}();
		}
		offset = ${name}.readFrom(buf, offset);
	}
#elseif($type == "s")
	int value = 0;
	int i = 0;
	byte rb = Byte.MIN_VALUE;
	for (; offset < buf.length; offset++) {
		byte b = buf[offset];
		rb = b;
		if ((b & 0x80) == 0) {
			offset++;
			break;
		}
		value |= (b & 0x7f) << i;
		i += 7;
		if (i > 35) {
			throw new RuntimeException("Invalid string length data");
		}
	}
	int length = value | (rb << i);
	byte[] bytes = new byte[length];
	System.arraycopy(buf, offset, bytes, 0, length);
	offset += length;
	$name = new String(bytes, "UTF-8");
#elseif($type == "b")
	$name = buf[offset++] == 1;
#elseif($type == "i8" || $type == "u8")
	$name = buf[offset++];
#elseif($type == "i16" || $type == "u16")
	$name = (short)((buf[offset++] & 0xFF) |
						 (buf[offset++] << 8));
#elseif($type == "i32" || $type == "u32")
	$name = (int)((buf[offset++] & 0xFF) |
						 ((buf[offset++] & 0xFF) << 8)   |
						 ((buf[offset++] & 0xFF) << 16)  |
						 (buf[offset++] << 24));
#elseif($type == "i64" || $type == "u64")
	$name = 		(((long)buf[offset++] & 0xFF) |
					(((long)buf[offset++] & 0xFF) << 8)   |
					(((long)buf[offset++] & 0xFF) << 16)  |
					(((long)buf[offset++] & 0xFF) << 24)  |
					(((long)buf[offset++] & 0xFF) << 32)  |
					(((long)buf[offset++] & 0xFF) << 40)  |
					(((long)buf[offset++] & 0xFF) << 48)  |
					(((long)buf[offset++] & 0xFF) << 56));
#elseif($type == "f32")
	int value = (int)((buf[offset++] & 0xFF) |
					((buf[offset++] & 0xFF) << 8)   |
					((buf[offset++] & 0xFF) << 16)  |
					(buf[offset++] << 24));
	$name = Float.intBitsToFloat(value);
#elseif($type == "f64")
	long value = (((long)buf[offset++] & 0xFF) |
					(((long)buf[offset++] & 0xFF) << 8)   |
					(((long)buf[offset++] & 0xFF) << 16)  |
					(((long)buf[offset++] & 0xFF) << 24)  |
					(((long)buf[offset++] & 0xFF) << 32)  |
					(((long)buf[offset++] & 0xFF) << 40)  |
					(((long)buf[offset++] & 0xFF) << 48)  |
					(((long)buf[offset++] & 0xFF) << 56));
	${name} = Double.longBitsToDouble(value);
#end
#end
